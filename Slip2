class Single {
    private static volatile Single s;
    private Single() {}
    static Single get() {
        if(s==null) 
            synchronized(Single.class) {
                if(s==null) s = new Single();
            }
        return s;
    }
}

public class Main {
    public static void main(String[] args) {
        Runnable r = () -> System.out.println(Single.get());
        new Thread(r).start();
        new Thread(r).start();
    }
}
